{
  "name": "building-maintenance-app",
  "version": "0.1.0",
  "private": true,
  "description": "Digital platform for building maintenance and repair requests",
  "author": "Javier",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:web\"",
    "dev:backend": "cd packages/backend && npm run dev",
    "dev:web": "cd packages/web && npm start",
    "dev:mobile": "cd packages/mobile && npm start",
    "build": "npm run build:backend && npm run build:web",
    "build:backend": "cd packages/backend && npm run build",
    "build:web": "cd packages/web && npm run build",
    "test": "npm run test:backend && npm run test:web",
    "test:backend": "cd packages/backend && npm test",
    "test:web": "cd packages/web && npm test",
    "lint": "eslint packages/ --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write \"packages/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "prepare": "husky install",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "devDependencies": {
    "concurrently": "^8.0.0",
    "eslint": "^8.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.0",
    "prettier": "^2.8.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}